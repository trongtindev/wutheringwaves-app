{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "properties": {
    "items": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "slug": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "icon": {
            "type": "string"
          },
          "colors": {
            "type": "object",
            "properties": {
              "background": {
                "type": "string"
              },
              "border": {
                "type": "string"
              }
            }
          },
          "twoPieceEffect": {
            "type": "object",
            "properties": {
              "type": {
                "type": "string",
                "enum": [
                  "ATK%",
                  "Spectro DMG",
                  "Havoc DMG",
                  "Electro DMG",
                  "Fusion DMG",
                  "Aero DMG",
                  "Glacio DMG",
                  "Energy Regen",
                  "Healing Bonus"
                ]
              },
              "value": {
                "type": "number"
              }
            },
            "required": ["type", "value"]
          }
        },
        "required": [
          "slug",
          "name",
          "icon",
          "twoPieceEffect",
          "fivePieceEffect"
        ]
      }
    }
  },
  "required": ["items"],
  "type": "object"
}
