{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "properties": {
    "items": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "enum": [
              "beginner",
              "beginner-choice",
              "beginner-choice-custom",
              "standard-resonator",
              "standard-weapon",
              "featured-resonator",
              "featured-weapon"
            ]
          },
          "time": {
            "type": "object",
            "properties": {
              "start": {
                "type": "string"
              },
              "end": {
                "type": "string"
              }
            },
            "required": ["start", "end"]
          },
          "name": {
            "type": "string"
          },
          "nameLocalized": {
            "type": "object"
          },
          "featuredRare": {
            "type": "string",
            "anyOf": [
              {
                "$ref": "./character.components.json#/components/schemas/name"
              },
              {
                "$ref": "./weapon.components.json#/components/schemas/name"
              }
            ]
          },
          "featured": {
            "type": "array",
            "items": {
              "type": "string",
              "anyOf": [
                {
                  "$ref": "./character.components.json#/components/schemas/name"
                },
                {
                  "$ref": "./weapon.components.json#/components/schemas/name"
                }
              ]
            }
          },
          "thumbnail": {
            "type": "string"
          }
        },
        "required": ["type", "name", "thumbnail"]
      }
    }
  },
  "required": ["items"],
  "type": "object"
}
